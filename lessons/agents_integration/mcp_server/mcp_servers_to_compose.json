{
  "mcpServers": {
    "nova-research-agent": {
      "transport": "stdio",
      "command": "uv",
      "args": [
        "--directory",
        "/absolute/path/to/research_agent_part_2/mcp_server",
        "run",
        "-m",
        "src.server",
        "--transport",
        "stdio"
      ]
    },
    "brown-writing-workflow": {
      "transport": "stdio",
      "command": "uv",
      "args": [
        "--directory",
        "/absolute/path/to/writing_workflow",
        "run",
        "python",
        "-m",
        "brown.mcp.server"
      ]
    }
  }
}

